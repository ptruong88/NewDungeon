<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.longdungeon.ShoppingActivity" >

    <ImageView
        android:id="@+id/picLogo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/banner" />

    <ImageView
        android:id="@+id/imageViewShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/picLogo"
        android:layout_below="@+id/picLogo"
        android:scaleType="fitXY"
        android:src="@drawable/shop" />

    <LinearLayout
        android:id="@+id/layoutGoldInvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/picLogo"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/picLogo"
        android:background="@drawable/colorbox"
        android:padding="0dp" >

        <TextView
            android:id="@+id/textViewGold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Gold: XXXXX"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/buttonInventory"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Inventory" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollViewCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewShop"
        android:layout_below="@+id/layoutGoldInvent"
        android:layout_toRightOf="@+id/imageViewShop"
        android:background="@drawable/colorbox" >

        <LinearLayout
            android:id="@+id/layoutCategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/buttonAttack"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:text="Attack"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/buttonDefend"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:layout_weight="0.1"
                android:padding="0dp"
                android:text="Denfend"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/buttonMagic"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:text="Magic"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/buttonItem"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:text="Item"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/buttonRun"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:text="Run Away"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

    <ListView
        android:id="@+id/listViewItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/scrollViewCategory"
        android:layout_toRightOf="@+id/scrollViewCategory"
        android:layout_alignParentBottom="true"
        android:background="@drawable/colorbox" >
    </ListView>

</RelativeLayout>