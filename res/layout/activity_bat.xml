<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="com.example.longdungeon.activity.BattleActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".3" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="115dp"
                android:layout_height="20dp"
                android:src="@drawable/banner" />

            <LinearLayout
                android:id="@+id/scoreBox"
                android:layout_width="match_parent"
                android:layout_height="15dp" >

                <TextView
                    android:id="@+id/scoreLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score" />

                <TextView
                    android:id="@+id/scoreTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":  0" />
            </LinearLayout>

            <TextView
                android:id="@+id/enemyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goblin" />

            <LinearLayout
                android:id="@+id/enemyBox"
                android:layout_width="match_parent"
                android:layout_height="15dp" >

                <TextView
                    android:id="@+id/enemyHpLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HP:" />

                <TextView
                    android:id="@+id/enemyHpTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="76/76" />
            </LinearLayout>

            <TextView
                android:id="@+id/playerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sir Awesome" />

            <LinearLayout
                android:id="@+id/playerHp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/playerHpLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HP:" />

                <TextView
                    android:id="@+id/playerHpTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120/120" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/playerMgk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/playerMgkLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MGK:" />

                <TextView
                    android:id="@+id/playerMgkTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40/60" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/playerStm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/playerStmLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STM" />

                <TextView
                    android:id="@+id/playerStmTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100/100" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/attackBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shopping Screen" />

                    <Button
                        android:id="@+id/defendBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Defend" />

                    <Button
                        android:id="@+id/magicBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Magic" />

                    <Button
                        android:id="@+id/itemBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item" />

                    <Button
                        android:id="@+id/runBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Run" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".7" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="600dp"
            android:layout_height="250dp"
            android:src="@drawable/background" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="90dp"
            android:src="@drawable/goblin" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="33dp"
            android:src="@drawable/knight" />

    </RelativeLayout>

</LinearLayout>