<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:id="@+id/layoutMob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:src="@drawable/banner" />

        <TextView
            android:id="@+id/enemyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="@+id/imageView1"
            android:layout_below="@+id/imageView1"/>
<!--             android:textColor="@color/white" -->
<!--             android:text="Goblin" /> -->

        <TextView
            android:id="@+id/enemyHpLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="@+id/imageView1"
            android:layout_below="@+id/enemyName"
            android:text="HP:" />

        <TextView
            android:id="@+id/enemyHpNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enemyName"
            android:layout_toRightOf="@+id/enemyHpLabel"
            android:text="76/76" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutBattle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/layoutMob"
        android:layout_toRightOf="@+id/layoutMob"
        android:layout_toLeftOf="@+id/layoutPlayer" >

        <LinearLayout
            android:id="@+id/layoutPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layoutSkillOptions"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".5"
                android:src="@drawable/goblin" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2" >
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".3"
                android:src="@drawable/knight" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layoutSkillOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"            
            android:layout_alignParentBottom="true" >

            <Button
                android:id="@+id/skill1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"   
                android:layout_toLeftOf="@+id/skill2"             
                android:text="Skill 1" />

            <Button
                android:id="@+id/skill2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                
                android:layout_centerHorizontal="true"
                android:text="Skill 2" />

            <Button
                android:id="@+id/skill3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/skill2"
                android:text="Skill 3" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutPlayer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/layoutMob" >

        <TextView
            android:id="@+id/scoreLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Score" />

        <TextView
            android:id="@+id/scoreTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/scoreLabel"
            android:layout_toRightOf="@+id/scoreLabel"
            android:text=":  0" />

        <TextView
            android:id="@+id/playerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/scoreLabel"
            android:text="Sir Awesome" />

        <TextView
            android:id="@+id/playerHpLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/playerName"
            android:text="HP:" />

        <TextView
            android:id="@+id/playerHpTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playerName"
            android:layout_toRightOf="@+id/playerHpLbl"
            android:text="120/120" />

        <TextView
            android:id="@+id/playerMgkLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/playerHpLbl"
            android:text="MGK:" />

        <TextView
            android:id="@+id/playerMgkTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playerHpLbl"
            android:layout_toRightOf="@+id/playerMgkLbl"
            android:text="40/60" />

        <TextView
            android:id="@+id/playerStmLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/playerMgkLbl"
            android:text="STM" />

        <TextView
            android:id="@+id/playerStmTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playerMgkLbl"
            android:layout_toRightOf="@+id/playerStmLbl"
            android:text="100/100" />
    </RelativeLayout>

</RelativeLayout>